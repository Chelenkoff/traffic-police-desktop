<UserControl x:Class="TrafficPoliceDesktopApp.View.SearchDriverOwnerSubviews.SearchDriverOwnerPersonalDataSubView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             mc:Ignorable="d" d:DesignWidth="490" Height="568.486" Loaded="UserControl_Loaded">
    <Grid>
        <Label x:Name="lblViewMessage" Content="Лични данни на" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="29,0,0,0" VerticalAlignment="Top" Width="451" Foreground="#CC119EDA" FontSize="20"/>

        <GroupBox Header="Лични данни на водач/собственик" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Height="477" Width="470">

            <Grid   >
                <TextBox x:Name="txtBoxId" MaxLength="10" Controls:TextBoxHelper.ClearTextButton="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="33" Margin="90,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="208" FontSize="18" IsEnabled="False"/>

                <Label Content="ЕГН:" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="5,10,0,0" VerticalAlignment="Top" Width="114" Foreground="#CC119EDA" FontSize="18" Height="33"/>

                <Controls:ProgressRing x:Name="progressRingLoading" Margin="184,1580,191,20" Height="50" Width="50" IsActive="False" />
                <TextBox x:Name="txtBoxFirstName" MaxLength="20" Controls:TextBoxHelper.ClearTextButton="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="29" Margin="90,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="177" FontSize="16" IsEnabled="False"/>
                <Label Content="Име:" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="5,56,0,0" VerticalAlignment="Top" Width="60" Foreground="#CC119EDA" FontSize="16" Height="30"/>
                <TextBox x:Name="txtBoxSecondName" MaxLength="20" Controls:TextBoxHelper.ClearTextButton="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="29" Margin="90,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="177" FontSize="16" IsEnabled="False"/>
                <Label Content="Презиме:" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="5,97,0,0" VerticalAlignment="Top" Width="85" Foreground="#CC119EDA" FontSize="16"/>
                <TextBox x:Name="txtBoxLastName" MaxLength="20" Controls:TextBoxHelper.ClearTextButton="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="29" Margin="90,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="177" FontSize="16" IsEnabled="False"/>
                <Label Content="Фамилия:" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="5,136,0,0" VerticalAlignment="Top" Width="85" Foreground="#CC119EDA" FontSize="16" Height="29"/>
                <RadioButton x:Name="radioBtnMan" Content="Мъж" GroupName="sex" HorizontalAlignment="Left" Margin="289,57,0,0" VerticalAlignment="Top" Foreground="#CC119EDA" IsChecked="True" FontSize="16" Height="33" Width="63" IsEnabled="False"/>
                <RadioButton x:Name="radioBtnWoman" Content="Жена" GroupName="sex" HorizontalAlignment="Left" Margin="357,59,0,0" VerticalAlignment="Top" Foreground="#CC119EDA" FontSize="16" Height="31" Width="68" IsEnabled="False"/>
                <ComboBox x:Name="comboBoxCountries" HorizontalAlignment="Left" Margin="313,136,0,0" VerticalAlignment="Top" Width="120" Height="29" IsEnabled="False"/>
                <Label Content="Гражданство:" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="313,100,0,0" VerticalAlignment="Top" Width="120" Foreground="#CC119EDA" FontSize="16"/>
                <Label Content="Дата на раждане:" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="5,190,0,0" VerticalAlignment="Top" Width="140" Foreground="#CC119EDA" FontSize="16" Height="31"/>
                <DatePicker x:Name="datePickerBirthDate" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  HorizontalAlignment="Left" Margin="173,190,0,0" VerticalAlignment="Top" FirstDayOfWeek="Monday" Height="31" Focusable="False"  IsEnabled="False" FontSize="15"/>
                <Label Content="Месторождение:" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="5,259,0,0" VerticalAlignment="Top" Width="135" Foreground="#CC119EDA" FontSize="16"/>
                <TextBox x:Name="txtBoxBirthPlace" MaxLength="30" Controls:TextBoxHelper.ClearTextButton="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="31" Margin="173,259,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152" FontSize="16" IsEnabled="False"/>
                <Label Content="Постоянен адрес:" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="5,304,0,0" VerticalAlignment="Top" Width="145" Foreground="#CC119EDA" FontSize="16"/>
                <TextBox x:Name="txtBoxResidence"  MaxLength="50" Controls:TextBoxHelper.ClearTextButton="True"  HorizontalAlignment="Left" Height="72" Margin="173,304,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="235" FontSize="16" IsEnabled="False"/>

                <Button x:Name="btnSave" Content="Добави"  Style="{DynamicResource SquareButtonStyle}" HorizontalAlignment="Left" Margin="28,394,0,0" VerticalAlignment="Top" Width="102" Controls:ButtonHelper.PreserveTextCase="True" Height="38" FontSize="16" ClickMode="Press"   />
                <Button x:Name="btnClear" Content="Изчисти"  Style="{DynamicResource SquareButtonStyle}" HorizontalAlignment="Left" Margin="331,394,0,0" VerticalAlignment="Top" Width="102" Controls:ButtonHelper.PreserveTextCase="True" Height="38" FontSize="16" ClickMode="Press"   />

            </Grid>

        </GroupBox>
    </Grid>
</UserControl>
